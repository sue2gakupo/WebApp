@model IEnumerable<MyModel_DBFirst.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.DeptID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DeptID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DeptID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DeptID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
