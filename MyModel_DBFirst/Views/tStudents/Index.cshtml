@model IEnumerable<MyModel_DBFirst.Models.tStudent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* 學號 *@  @* hard code *@
                @Html.DisplayNameFor(model => model.fStuId)
            </th>
            <th>
                @* 姓名 *@
                @Html.DisplayNameFor(model => model.fName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fScore)
            </th>
            <th>資料管理</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fStuId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fScore)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.fStuId" class="btn btn-outline-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.fStuId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.fStuId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
